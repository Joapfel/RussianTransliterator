<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	
	.dropdown {
		width: 100%;
		font-size: 24px;
		border-top: none;
		border-left: none;
		border-right: none;
	}
	
	.inputArea {
		width: 100%;
		height: 300px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0
			rgba(0, 0, 0, 0.19);
	}
	
	.outputArea {
		width: 100%;
		height: 300px;
		background-color: #f2f2f2;
		color: grey;
		border: 2px solid grey;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0
			rgba(0, 0, 0, 0.19);
	}
	
	</ui:style>



	<g:HTMLPanel>
		<div class="container-fluid">

			<div id="marginTop"></div>

			<div class="row">

				<div class="col-lg-5 col-md-5 col-sm-12">

					<div id="header">
						<div id="russian">Russian</div>
						<div id="transliterator">Transliterator</div>
					</div>

				</div>

				<div class="col-lg-5 col-md-5 col-sm-12">
				
					<div id="readme">
						Description:
					</div>
					
				</div>

			</div>

			<div id="marginTop"></div>

			<div class="row">

				<div class="col-lg-5 col-md-5 col-sm-12">
					<g:TextArea styleName="{style.inputArea}" ui:field="inputArea" />
				</div>

				<div class="col-lg-5 col-md-5 col-sm-12">
					<g:TextArea styleName="{style.outputArea}" ui:field="outputArea" />
				</div>

				<div class="col-lg-2 col-md-2 col-sm-12">

					<div id="configWrapper">
					
						<div class="config">
							<span>Languages </span>
							<span class="glyphicon glyphicon-globe"></span>
							<g:ListBox styleName="{style.dropdown}" ui:field="dropdownLanguage">
								<g:item>Latin</g:item>
								<g:item>Russian</g:item>
							</g:ListBox>
						</div>

						<div class="config">
							<span>Stress </span>
							<span class="glyphicon glyphicon-hand-down"></span>
							<g:ListBox styleName="{style.dropdown}" ui:field="dropdownStress">
								<g:item>Accented</g:item>
								<g:item>Plain</g:item>
							</g:ListBox>
						</div>
					</div>

				</div>

			</div>

			<div id="marginTop"></div>

			<div class="row">
				<g:HTMLPanel ui:field="loading">
					<div class="load-bar">
						<div class="bar"></div>
						<div class="bar"></div>
						<div class="bar"></div>
					</div>
				</g:HTMLPanel>

			</div>
		</div>
	</g:HTMLPanel>


</ui:UiBinder> 